---
import Layout from "@app/layouts/Layout.astro";
import { ImageCompressor } from "@app/components/compress";
import { Features } from "@app/components/template/features";
---

<Layout title="сжатие картинок png, jpeg, webp онлайн бесплатно">
  <div class="container">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-4xl font-bold my-10">
        Быстрое и эффективное сжатие изображений
      </h1>
    </div>

    <section class="flex flex-col">
      <ImageCompressor client:idle />
    </section>

    <span class="divider"></span>

    <section class="py-6 px-2 flex flex-col gap-8" id="why-use">
      <Features />
    </section>

    <span class="divider"></span>
  </div>
</Layout>
